        <Image x:Name="imgBoard" HorizontalAlignment="Left" Height="500" Margin="44,40,0,0" VerticalAlignment="Top" Width="500" MouseDown="imgBoard_MouseDown"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="21" Margin="634,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
