            <TextBlock x:Name="txtScreen" Width="106" TextWrapping="Wrap" Margin="0,0,0,0"/>
        </ScrollViewer>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="25" Margin="872,231,0,0" VerticalAlignment="Top" Width="52" Click="btnSend_Click" RenderTransformOrigin="-0.16,-0.293"/>
        <ListBox x:Name="activeConnections" HorizontalAlignment="Left" Height="113" Margin="822,59,0,0" VerticalAlignment="Top" Width="102"/>
        <Label x:Name="lblPlayer" Content="Label" HorizontalAlignment="Left" Height="25" Margin="634,59,0,0" VerticalAlignment="Top" Width="183"/>

    </Grid>
</Window>
